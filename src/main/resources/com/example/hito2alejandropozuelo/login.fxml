<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="338.0" prefWidth="322.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hito2alejandropozuelo.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label styleClass="title" text="Iniciar Sesión" />
    <TextField fx:id="tf_usuario" promptText="Usuario" styleClass="text-field" />
    <PasswordField fx:id="pf_contrasena" promptText="Contraseña" styleClass="text-field" />
    <Button onAction="#iniciarSesion" styleClass="login-button" text="Iniciar Sesión" />
    <Button onAction="#irARegistro" styleClass="register-button" text="Registrarse" />
    <Label fx:id="lbl_mensaje" styleClass="message-label" />
</VBox>
